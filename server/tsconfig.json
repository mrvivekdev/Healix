{
  "compilerOptions": {
    "target": "ESNext",               
    "module": "ESNext",                
    "moduleResolution": "Node",        
    "esModuleInterop": true,           
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",                 
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "express"] 
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
